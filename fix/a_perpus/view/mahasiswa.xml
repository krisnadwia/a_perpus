<odoo>

    <!-- tampilan treeview -->
    <record id="perpus_mahasiswa_tree" model="ir.ui.view">
        <field name="name">perpus_mahasiswa_tree</field>
        <field name="model">perpus.mahasiswa</field>
        <field name="arch" type="xml">
            <tree string="Daftar Mahasiswa">
                <field name="NIM"/>
                <field name="Nama"/>
            </tree>
        </field>
    </record>

    <!-- tampilan formulir -->
    <record id="perpus_mahasiswa_form" model="ir.ui.view">
        <field name="name">perpus_mahasiswa_form</field>
        <field name="model">perpus.mahasiswa</field>
        <field name="arch" type="xml">
            <form string="Mahasiswa">
                <group>
                    <field name="NIM"/>
                    <field name="Nama"/>
                </group>
            </form>
        </field>
    </record>
</odoo>