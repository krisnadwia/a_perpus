<odoo>

    <!-- tampilan treeview -->
    <record id="perpus_penerbit_tree" model="ir.ui.view">
        <field name="name">perpus_penerbit_tree</field>
        <field name="model">perpus.penerbit</field>
        <field name="arch" type="xml">
            <tree string="Daftar Penerbit">
                <field name="kota"/>
                <field name="nama"/>
            </tree>
        </field>
    </record>

    <!-- tampilan formulir -->
    <record id="perpus_penerbit_form" model="ir.ui.view">
        <field name="name">perpus_penerbit_form</field>
        <field name="model">perpus.penerbit</field>
        <field name="arch" type="xml">
            <form string="Mahasiswa">
                <group>
                    <field name="nama"/>
                    <field name="kota"/>
                </group>
            </form>
        </field>
    </record>
</odoo>